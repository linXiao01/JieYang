<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#F5F5F5"
        android:id="@+id/more_top_layout">
        <TextView
            android:id="@+id/more_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更多信息"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/more_top_layout"
        android:background="#dcdcdc"
        android:id="@+id/more_line1"/>

    <TextView
        android:id="@+id/jieyang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/more_line1"
        android:drawableLeft="@drawable/jieyang"
        android:drawablePadding="50dp"
        android:padding="10dp"
        android:text="JieYang"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/more_line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/jieyang"
        android:background="#DCDCDC"/>

    <TextView
        android:id="@+id/version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="版本信息"
        android:textSize="18sp"
        android:drawableLeft="@drawable/version"
        android:layout_below="@id/more_line2"
        android:drawablePadding="50dp"
        android:padding="10dp"/>

    <ImageView
        android:id="@+id/more_line3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/version"
        android:background="#DCDCDC"/>


    <TextView
        android:singleLine="false"
        android:id="@+id/project"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="项目地址\nhttps://github.com/linXiao01/JieYang"
        android:textSize="18sp"
        android:drawableLeft="@drawable/project"
        android:layout_below="@id/more_line3"
        android:drawablePadding="50dp"
        android:padding="10dp"/>

    <ImageView
        android:id="@+id/more_line4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/project"
        android:background="#DCDCDC"/>


    <TextView
        android:singleLine="false"
        android:id="@+id/xiaolin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="作者：小林"
        android:textSize="18sp"
        android:drawableLeft="@drawable/author"
        android:layout_below="@id/more_line4"
        android:drawablePadding="50dp"
        android:padding="10dp"/>

    <ImageView
        android:id="@+id/more_line5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/xiaolin"
        android:background="#DCDCDC"/>

    <TextView
        android:singleLine="false"
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="邮箱\n1849569695@qq.com"
        android:textSize="18sp"
        android:drawableLeft="@drawable/email"
        android:layout_below="@id/more_line5"
        android:drawablePadding="50dp"
        android:padding="10dp"/>

    <ImageView
        android:id="@+id/more_line6"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/email"
        android:background="#DCDCDC"/>

    <TextView
        android:singleLine="false"
        android:id="@+id/github"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="github\nhttps://github.com/linXiao01/"
        android:textSize="18sp"
        android:drawableLeft="@drawable/github"
        android:layout_below="@id/more_line6"
        android:drawablePadding="50dp"
        android:padding="10dp"/>

    <ImageView
        android:id="@+id/more_line7"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/github"
        android:background="#DCDCDC"/>

    <Button
        android:id="@+id/tuichu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/more_line7"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:text="退出"
        >

    </Button>

</RelativeLayout>

